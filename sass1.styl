@import url("http://fonts.googleapis.com/css?family=Josefin+Sans");

favFont = "Josefin Sans", cursive

White = white//#F5F5F5//white// #EEEEEE//#FAFAFA//white
Red = #F44336//#EF5350
Yellow =#3F51B5//#42A5F5 #FFEB3B//#FFEE58
Blue =  #FFEB3B//#FFEE58
Grey =#616161
topTextMargin = -10px
linkMargin = 25px
titleFontSize = 800%
titleHeight = 114px
titleColor = Grey
bg = White
contentText = White
fullScreen = 100%
marginTop = 80px
circleRadius = 80px
circleBorderRadius = 40px
shadow = 0px 0px 2px 2px Grey
arrow = 74px
contentFontSize = 34px
linkSize = 80px
transitionTime = .5s
circleMarginBottom = 4px
topTextHeight = 40px
partitionPadding = 30px
Derp = marginTop + titleHeight + circleRadius + topTextHeight + circleMarginBottom
#derp
  height Derp

centerContent()
  margin-left auto
  margin-right auto
sq(arguments)
  width arguments
  height arguments
  display inline-block
  
customCircle(arguments, radius = circleRadius)
  sq(arguments)
  border-radius radius
colorContent()
  width fullScreen
  height fullScreen
  background-color arguments
  padding-top partitionPadding
transition()
  -webkit-transition all transitionTime ease
  -o-transition all transitionTime ease
  -moz-transition: all transitionTime ease
  -ms-transition: all transitionTime ease
  // -kthtml-transition: all 1s linear;
  transition: all transitionTime ease

body
  background-color bg
html
  overflow hidden

.red
  background-color Red
.yellow
  background-color Yellow
.blue
  background-color Blue
#title-text
  font-family favFont
  margin-top marginTop
  font-size titleFontSize
  color titleColor
#top-text
  color titleColor
  font-family favFont
  font-size contentFontSize
  height topTextHeight
  margin-left topTextMargin
  margin-top -30px
#circles
  centerContent()
  margin-bottom circleMarginBottom
  // margin-top -20px
.circ
  customCircle(circleRadius, circleBorderRadius)
  cursor pointer
  margin-left 10px
  margin-right 10px
  display inline-block
  opacity 1
  transition()
  &:hover
    border-radius circleBorderRadius - 30px
.shadow
  opacity 1 !important
  // -webkit-box-shadow shadow
  // -moz-box-shadow shadow
  // box-shadow shadow
  transition()
.sharp
  @extend .shadow
#abt
  colorContent(Red)
#media
  colorContent(Yellow)
#blog
  colorContent(Blue)
#about-text
  color contentText
  // margin-top 10px
  font-family favFont
  font-size contentFontSize - 4px
#mobile-space
  width fullScreen
  height 100px
#partition
  overflow hidden
  width fullScreen
  height 0px
  background-color Grey
.part
  height calc(100% - 338px)
.inactive
  display none
a 
  customCircle(linkSize)
  margin-bottom linkMargin
  transition()
  padding 1px
  border 1px solid transparent
  i
    font-size circleRadius - 5px !important
    margin-top 2px
    color White
    transition()
    // &:hover
    //   color Yellow
  img
    sq(linkSize)
    margin-top -2px
    margin-bottom -2px
    margin-left -2px
    border-radius linkSize
    // border 4px solid White
  &:hover
    background-color White
    i
      color Yellow
.fa-caret-up
  font-size arrow
  cursor pointer
  color White
  margin-top -10px
  transition()
  &:hover
    // transition()
    // opacity .5
    font-size arrow - 5px
.circ
  i
    font-size 30px
    margin-top 25px
    color White
a#github
  img 
    padding 1px
.fa-linkedin
  font-size circleRadius - 15px !important
.fa-facebook, .fa-linkedin
  margin-top 5px